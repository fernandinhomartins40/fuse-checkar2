{
  "name": "fuse-checkar2-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Sistema de Gestão de Revisões Automotivas - Monorepo",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:frontend": "turbo run dev --filter=@fuse-checkar2/frontend",
    "dev:backend": "turbo run dev --filter=@fuse-checkar2/backend",
    "build": "turbo run build",
    "build:frontend": "turbo run build --filter=@fuse-checkar2/frontend",
    "build:backend": "turbo run build --filter=@fuse-checkar2/backend",
    "build:shared": "turbo run build --filter=@fuse-checkar2/shared",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "clean": "rm -rf packages/*/node_modules packages/*/dist node_modules .turbo",
    "clean:build": "rm -rf packages/*/dist .turbo",
    "preview": "npm run preview --workspace=@fuse-checkar2/frontend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.1.0",
    "turbo": "^2.6.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
