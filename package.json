{
  "name": "fuse-checkar2-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Sistema de Gestão de Revisões Automotivas - Monorepo",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@fuse-checkar2/frontend",
    "dev:frontend": "npm run dev --workspace=@fuse-checkar2/frontend",
    "dev:backend": "npm run dev --workspace=@fuse-checkar2/backend",
    "dev:all": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",

    "build": "npm run build --workspaces --if-present",
    "build:frontend": "npm run build --workspace=@fuse-checkar2/frontend",
    "build:backend": "npm run build --workspace=@fuse-checkar2/backend",
    "build:shared": "npm run build --workspace=@fuse-checkar2/shared",

    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",

    "type-check": "npm run type-check --workspaces --if-present",

    "clean": "rm -rf packages/*/node_modules packages/*/dist node_modules",
    "clean:build": "rm -rf packages/*/dist",

    "preview": "npm run preview --workspace=@fuse-checkar2/frontend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
