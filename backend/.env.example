# Ambiente
NODE_ENV=development

# Porta do servidor
PORT=3005

# URLs
FRONTEND_URL=http://localhost:5173

# JWT Secrets (MUDAR EM PRODUÇÃO!)
JWT_SECRET=sua-chave-secreta-muito-forte-aqui-change-me
JWT_REFRESH_SECRET=sua-refresh-key-secreta-muito-forte-change-me

# JWT Expiration
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Banco de Dados (quando configurado)
# DATABASE_URL=postgresql://user:password@localhost:5432/checkar_db
# ou
# DATABASE_URL=mysql://user:password@localhost:3306/checkar_db

# Prisma
# DATABASE_PROVIDER=postgresql
# ou
# DATABASE_PROVIDER=mysql

# Logging
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
